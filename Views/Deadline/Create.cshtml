                @Html.ValidationMessageFor(model => model.AbstractAcceptance_Notif)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FullPaper_Deadline, new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.EditorFor(model => model.FullPaper_Deadline)
                @Html.ValidationMessageFor(model => model.FullPaper_Deadline)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaperAcceptance_Notif, new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.EditorFor(model => model.PaperAcceptance_Notif)
                @Html.ValidationMessageFor(model => model.PaperAcceptance_Notif)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CameraReadyPaper_Deadline, new { @class = "control-label col-md-3" })
