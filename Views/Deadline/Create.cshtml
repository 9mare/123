            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EarlyBird_Deadline, new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.EditorFor(model => model.EarlyBird_Deadline)
                @Html.ValidationMessageFor(model => model.EarlyBird_Deadline)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ParticipantRegistration_Deadline, new { @class = "control-label col-md-3" })
