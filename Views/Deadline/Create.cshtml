@model ConferenceManagementSystem.Models.DateDealine

@{
    ViewBag.Title = "Create";
}

<h2 class="not-login">Create<small></small></h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal form-center form-gradient">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ConferenceId)

        <div class="form-group">
            @Html.LabelFor(model => model.Abstract_Deadline, new { @class = "control-label col-md-3" })
