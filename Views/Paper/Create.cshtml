@model ConferenceManagementSystem.Models.Paper

@{
    ViewBag.Title = "Submission";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<h2 class="not-login">Submission<small></small></h2>


@using (Html.BeginForm("Create", "Paper", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal form-center form-gradient">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.conference.ConferenceName, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @ViewBag.conferenceName
                @Html.ValidationMessageFor(model => model.conference.ConferenceName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaperTitle, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.PaperTitle)
                @Html.ValidationMessageFor(model => model.PaperTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AuthorList, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.AuthorList)
                @Html.ValidationMessageFor(model => model.AuthorList)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Affiliation, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Affiliation)
                @Html.ValidationMessageFor(model => model.Affiliation)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Presenter, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Presenter)
                @Html.ValidationMessageFor(model => model.Presenter)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Abstract, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Abstract)
                @Html.ValidationMessageFor(model => model.Abstract)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Keywords, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Keywords)
                @Html.ValidationMessageFor(model => model.Keywords)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TopicId, "Topic", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("TopicId", "Please Select")
                @Html.ValidationMessageFor(model => model.TopicId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AbstractFile, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <input type="file" name="AbstractFile" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Create" class="btn btn-default btn-new" />
            </div>
        </div>
        <hr/>
    </div>
}

<div class="col-md-offset-2">
    @Html.ActionLink("Back to Home", "Home", "Main", new { id = TempData["ConferenceId"] }, new { @class = "btn btn-default btn-gradient"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
