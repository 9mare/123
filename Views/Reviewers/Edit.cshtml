@model ConferenceManagementSystem.Models.Reviewer

@{
    ViewBag.Title = "Edit Reviewer";
}

<h2 class="not-login">Edit<small> details of reviewers here</small></h2>

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Menu", "Conference", new { id = Model.ConferenceId }, null)</li>
    <li>@Html.ActionLink("Reviewer List", "Index", null, new { id = Model.ConferenceId }, null)</li>
    <li class="active">Edit Reviewers</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal form-center form-gradient">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ReviewerId)
        @Html.HiddenFor(model => model.InvitationEmailStatusId)
        @Html.HiddenFor(model => model.ConferenceId)

        <div class="form-group">
            @Html.LabelFor(model => model.TitleId, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.DropDownList("TitleId", String.Empty)
                @Html.ValidationMessageFor(model => model.TitleId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReviewerTypeId, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.DropDownList("ReviewerTypeId", String.Empty)
                @Html.ValidationMessageFor(model => model.ReviewerTypeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReviewerName, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.EditorFor(model => model.ReviewerName)
                @Html.ValidationMessageFor(model => model.ReviewerName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Area, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.EditorFor(model => model.Area)
                @Html.ValidationMessageFor(model => model.Area)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Instituition, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.EditorFor(model => model.Instituition)
                @Html.ValidationMessageFor(model => model.Instituition)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InvitationStatusId, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9 form-control-static">
                @Html.DropDownList("InvitationStatusId", String.Empty)
                @Html.ValidationMessageFor(model => model.InvitationStatusId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Save" class="btn btn-default btn-gradient" />
            </div>
        </div>
        <hr/>
    </div>
}

<div class="col-md-offset-2">
    @Html.ActionLink("Back to List", "Index", new { id = Model.ConferenceId }, new { @class = "btn btn-default btn-gradient" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
