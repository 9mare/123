@model ConferenceManagementSystem.Models.Attendee

@{
    ViewBag.Title = "UserDetail";
    Layout = "~/Views/Shared/AttendeeLayout.cshtml";
}

<h2>UserDetail</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Attendee</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.AttendeeId)
        @Html.HiddenFor(model => model.ConferenceId)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.UserTypeId)
        @Html.HiddenFor(model => model.RegDate)

        <div class="form-group">
            @Html.LabelFor(model => model.ConferenceId, "Conference", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.conference.ConferenceName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserId, "User", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.user.FullName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserTypeId, "Register As", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.usertype.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FeeId, "Category", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FeeId")
                @Html.ValidationMessageFor(model => model.FeeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.RegDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentStatusId, "Payment Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PaymentStatusId")
                @Html.ValidationMessageFor(model => model.PaymentStatusId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PaymentAmount)
                @Html.ValidationMessageFor(model => model.PaymentAmount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentDetail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PaymentDetail)
                @Html.ValidationMessageFor(model => model.PaymentDetail)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReceiptNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReceiptNumber)
                @Html.ValidationMessageFor(model => model.ReceiptNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.user.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.user.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.user.Instituition, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.user.Instituition)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.user.Address, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.user.Address)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.ConferenceId })
</div>
