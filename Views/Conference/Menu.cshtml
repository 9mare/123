@model ConferenceManagementSystem.Models.Conference

@{
    ViewBag.Title = "Conference Admin Menu";
}

<div class="row loginmargin">

    <h2 class="not-login">Menu<small> manage your conference here</small></h2>

    <ol class="breadcrumb">
        <li class="active">Home</li>
    </ol>


    @Html.AntiForgeryToken()
    <div class="menubox">
        @Html.ActionLink("Edit", "ConferenceDetail", "Conference", new { id = Model.ConferenceId }, new { @class = "col-md-offset-1 btn-menu btn-default" })
        @Html.ActionLink("Fee", "Index", "Fee", new { id = Model.ConferenceId }, new { @class = "btn-menu btn-default" })
        @Html.ActionLink("Topic", "Index", "Topic", new { id = Model.ConferenceId }, new { @class = "btn-menu btn-default" })
    </div>
    <div class="menubox">
        @Html.ActionLink("Content", "Edit", "Content", new { id = Model.ConferenceId }, new { @class = "col-md-offset-1 btn-menu btn-default" })
        @Html.ActionLink("Deadline", "Edit", "Deadline", new { id = Model.ConferenceId }, new { @class = "btn-menu btn-default" })
        @Html.ActionLink("Participants", "Index", "Attendee", new { id = Model.ConferenceId }, new { @class = "btn-menu btn-default" })
    </div>

    <div class="menubox">
        @Html.ActionLink("Reviewers", "Index", "Reviewers", new { id = Model.ConferenceId }, new { @class = "col-md-offset-1 btn-menu btn-default" })
        @Html.ActionLink("Preview Form", "Sample", "ReviewItem", new { id = Model.ConferenceId }, new { @class = "btn-menu btn-default" })
        @Html.ActionLink("Paper Format", "Edit", "AbstractFileFormats", new { id = Model.ConferenceId }, new { @class = "btn-menu btn-default" })
    </div>

    <div class="menubox">
        @Html.ActionLink("Scheduling", "Edit", "AbstractFileFormats", new { id = Model.ConferenceId }, new { @class = " col-md-offset-1 btn-menu btn-default" })
        @Html.ActionLink("Paper Submission", "PaperDetail", "Paper", new { id = Model.ConferenceId }, new { @class = " col-md-offset-1 btn-menu btn-default" })
    </div>

</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }




